<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lzh="http://schemas.android.com/apk/res/com.lzh.MobileSafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <com.lzh.MobileSafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lzh:desc_off="自动更新已关闭"
        lzh:desc_on="自动更新已开启"
        lzh:title="设置自动更新" >
    </com.lzh.MobileSafe.ui.SettingItemView>

    <com.lzh.MobileSafe.ui.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lzh:desc_off="号码归属地已关闭"
        lzh:desc_on="号码归属地已开启"
        lzh:title="号码归属地显示" >
    </com.lzh.MobileSafe.ui.SettingItemView>

    <com.lzh.MobileSafe.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.lzh.MobileSafe.ui.SettingClickView>

    <com.lzh.MobileSafe.ui.SettingItemView
        android:id="@+id/siv_callsms_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lzh:desc_off="黑名单拦截已关闭"
        lzh:desc_on="黑名单拦截已开启"
        lzh:title="黑名单拦截设置" >
    </com.lzh.MobileSafe.ui.SettingItemView>

    <com.lzh.MobileSafe.ui.SettingItemView
        android:id="@+id/siv_watchdog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lzh:desc_off="看门狗已关闭"
        lzh:desc_on="看门狗已开启"
        lzh:title="程序锁设置" >
    </com.lzh.MobileSafe.ui.SettingItemView>

</LinearLayout>