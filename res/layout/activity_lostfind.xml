<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:background="#8866ff00"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:text="手机防盗"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
       <TextView 
           android:text="安全号码"
           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_marginLeft="8dip"
           android:layout_marginTop="8dip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           /> 
       <TextView 
           android:id="@+id/tv_safenumber"
           android:text="XXX"
           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_alignParentRight="true"
           android:layout_marginRight="5dip"
           android:layout_marginTop="8dip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           
           /> 
    </RelativeLayout>
    <View 
        android:layout_marginTop="5dip"
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        />
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
       <TextView 
           android:text="防盗保护是否开启"
           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_marginLeft="5dip"
           android:layout_marginTop="8dip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           /> 
       <ImageView
           android:id="@+id/iv_protecting"
           android:src="@drawable/lock"
           android:layout_alignParentRight="true"
           android:layout_marginRight="5dip"
           android:layout_marginTop="8dip"
           android:layout_width="25dip"
           android:layout_height="25dip"
           /> 
    </RelativeLayout>
    <View 
        android:layout_marginTop="5dip"
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        />
    
     <TextView 
           android:background="@drawable/shape_selector"
           android:clickable="true"
           android:onClick="reEnterSetup"
           android:text="重新进入设置向导"
           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_marginLeft="5dip"
           android:layout_marginTop="8dip"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           /> 
     <View 
        android:layout_marginTop="5dip"
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        />
     
     <TextView 
           android:text="功能简介"
           android:textSize="20sp"
           android:textColor="#000000"
           android:background="#44000000"
           android:layout_marginLeft="5dip"
           android:layout_marginTop="8dip"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           /> 
        <TextView 
        android:text="GPS追踪:#*location*#*"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
        <TextView 
        android:text="播放报警音乐:#*alarm*#*"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
        <TextView 
        android:text="远程数据销毁:#*wipedate*#*"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
        <TextView 
        android:text="远程锁屏:#*lockscreen*#*"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />

</LinearLayout>
